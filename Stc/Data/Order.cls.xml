<Method name="Delete">
<Description>
Удаление любой заявки. Удалются все студенты из заявки и локализация для заявки</Description>
<ClassMethod>1</ClassMethod>
<FormalSpec>id:%String</FormalSpec>
<ReturnType>%Status</ReturnType>
<Implementation><![CDATA[
	if (##class(OrderApproved).%ExistsId(id) = $$$OK){
		set order = ..%OpenId(id,4)
		set key = ""
		for i=1:1:order.Students.Count(){
			set key = order.Students.Next(key)
			do order.Students.RemoveAt(key)
			
			if (##class(Stc.Data.Person).IsEditable(key, 1) = 1){
				set st = ##class(Person).Delete(key)

				if $$$ISERR(st) RETURN st
			}
		}
	}
	elseif (##class(OrderDirty).%ExistsId(id) = $$$OK){
		set order = ..%OpenId(id,4)
		
		set st = ##class(Stc.Data.Localization.LText).Delete(order.LastName.%Id())
		quit:$$$ISERR(st) st
		
		set st = ##class(Stc.Data.Localization.LText).Delete(order.FirstName.%Id())
		quit:$$$ISERR(st) st
		
		set st = ##class(Stc.Data.Localization.LText).Delete(order.MiddleName.%Id())
		quit:$$$ISERR(st) st
	}
	
	quit ..%DeleteId(id,4)
]]></Implementation>
</Method>

