<ReturnType>MailingTrainingGroup</ReturnType>
<Implementation><![CDATA[
	set st = $$$OK
	
	set obj = ""
	
	if (..CommonIdxExists(tr.%Id(), gr.%Id()) = $$$YES){
		quit ..CommonIdxOpen(tr.%Id(), gr.%Id())	
	}
	
	set obj = ..%New()
	set obj.Training = tr
	set obj.MGroup = gr
	set obj.IsAutoMailing = isAutoMailing
	set st = obj.%Save()
	
	quit obj
]]></Implementation>
