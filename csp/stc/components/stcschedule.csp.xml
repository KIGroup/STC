<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="stc/components/stcschedule.csp" application="/csp/stc/" default="1"><![CDATA[
<div class="row-fluid" style="margin: 0 0 13px 0; border-bottom: 1px solid #dddddd; border-radius: 0px; font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12px; color: #000;">
    <div class="row-fluid">
        <table class="table scheduleTable">
            <tr>
                <td colspan="5" ng-style="course.style"><b ng-bind="course.name"></b></td>
            </tr>
            <tr>
                <td ng-bind="'Продолжительность' + ': ' + course.days + ' д. (' + course.hours + ' ч.)'" colspan="3"></td>
                <td class="cellLink" style="width: 115px; text-align: center;" title="Открыть программу курса">
                    <a ng-href="{{course.programUrl}}" class="cellLink" target="_blank" ng-bind="'Программа »'"></a>
                </td>
                <td style="width: 125px; text-align: center;" title="Оформить заявку на новое обучение">
                    <a ng-href="{{course.urlCreateOrder}}" class="cellLink" target="_blank"  ng-bind="'Оформить заявку »'"></a>
                </td>
            </tr>
            <tr>
                <td style="border-left: none; height: 3px; padding: 0;" colspan="5"></td>
            </tr>
        </table>
    </div>
    <div class="row-fluid" ng-repeat="tr in course.trainings">
        <div class="row-fluid">    
            <table class="table scheduleTable scheduleTableTrainingHead unselectable" ng-click="onClickTraining(tr)">
                <tr ng-style="tr.headStyle">
                    <td style="width: 5%; text-align: center;">
                        <i class="icon icon-caret-right" ng-hide="tr.detailsVisible"></i>
                        <i class="icon icon-sort-down" ng-show="tr.detailsVisible" style="position: relative; top: -3px;"></i>
                    </td>
                    <td ng-bind="tr.city.name" style="width: 30%;"></td>
                    <td ng-bind="tr.dates" style="text-align: center;" colspan="2"></td>
                    <td style="width: 115px; text-align: center;">
                    	<a ng-hide="tr.detailsVisible" href="" class="scheduleDetails" ng-bind="'Подробнее'" title="Показать дополнительную информацию"></a>
                    	<a ng-show="tr.detailsVisible" href="" class="scheduleDetails" ng-bind="'Закрыть'"  title="Скрыть дополнительную информацию"></a>
                	</td> 
                </tr>
            </table>
        </div>
        <div class="row-fluid" ng-show="tr.detailsVisible" style="rgb(97, 97, 97);">
            <table class="table scheduleTable" style="margin-bottom: 15px;">
                <tr>
                    <td ng-bind="' '" style="width: 5%; border-top-style: dashed;"></td>
                    <td ng-bind="'Адрес: ' + tr.address" style="border-top-style: dashed;"></td> 
                </tr>
                <tr>
                    <td ng-bind="' '" style="width: 5%; border-top: none;"></td>
                    <td ng-bind="'Время: ' + tr.timeStart + ' - ' + tr.timeFinish" style="border-top: none;"></td> 
                </tr>
                <tr>
                    <td ng-bind="' '" style="width: 5%; border-top: none;"></td>
                    <td ng-bind="'Преподаватель: ' + tr.teacher.lastName + ' ' + tr.teacher.firstName + ', ' + tr.teacher.email" style="border-top: none;"></td> 
                </tr>
                <tr ng-hide="tr.curatorFullName==''">
                    <td ng-bind="' '" style="width: 5%; border-top: none;"></td>
                    <td ng-bind="'Контактное лицо: ' + tr.curatorInfo" style="border-top: none;"></td> 
                </tr>
                <tr ng-hide="tr.otherInfo==''">
                    <td ng-bind="' '" style="width: 5%; border-top: none;"></td>
                    <td ng-bind="'Примечание: ' + tr.otherInfo" style="border-top: none;"></td> 
                </tr>
                <tr>
                    <td ng-bind="' '" class="cellLink" style="width: 5%; border-top: none;"></td>
                    <td style="border-top: none;">
                        <a ng-href="{{tr.urlJoin}}" class="cellLink" target="_blank" ng-bind="'Присоединиться »'"></a>
                        &nbsp;&nbsp;&nbsp;
                        <a ng-href="{{tr.urlAddGoogleCalendarEvent}}" class="cellLink" target="_blank" ng-bind="'Копировать мой календарь »'"></a>
                    </td> 
                </tr>
            </table>
        </div>    
    </div>
    <div class="row-fluid" ng-show="course.trainings.length==0">
        <table class="table scheduleTable">
            <tr>
                <td ng-bind="'Нет доступных тренингов'" style="font-style: italic;"></td>
            </tr>
        </table>
    </div>
</div>
]]></CSP>
</Export>
