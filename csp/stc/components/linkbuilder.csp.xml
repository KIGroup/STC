			        <div class="controls">
			            <input class="span12" type="text" value="{{getResult()}}"></input>
			        </div>
			    </div> 
			    <button type="button" class="btn btn-small" ng-click="isVisible=false" ng-bind="'Закрыть'|localize"></button>   		    		    
			</form>
