    <script language="javascript">          
        // Настройки приложения. Имена веб-приложений для REST, google календарь, язык
        var StcAppSetting = {};
        StcAppSetting.defaultApp = '#(##class(Stc.Data.Settings).GetWebAppNamespace())#';
