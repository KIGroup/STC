<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="stc/partials/orderstudent.csp" application="/csp/dorabotka/" default="1"><![CDATA[
<div class="row-fluid">
	<div class="span4">
	</div>
	<div class="span4">
		<accordion close-others="false">
		    <accordion-group is-open="true" heading="{{'Обучение'|localize}}">
				<p><span ng-bind="'Курс'|localize"></span>: <span ng-bind="ordForm.training.course.name"></span></p>
				<p><span ng-bind="'Город'|localize"></span>: <span ng-bind="ordForm.training.city.name + ', ' + ordForm.training.city.parentName + ', ' + ordForm.training.city.greatParentName"></span></p>
				<p><span ng-bind="'Адрес'|localize"></span>: <span ng-bind="ordForm.training.address.title"></span></p>
				<p><span ng-bind="'Аудитория'|localize"></span>: <span ng-bind="ordForm.training.room"></span></p>
				<p><span ng-bind="'Дата начала'|localize"></span>: <span ng-bind="ordForm.training.dateStart|convertCacheDate:('d MMMM y'|localize)"></span></p>
				<p><span ng-bind="'Дата окончания'|localize"></span>: <span ng-bind="ordForm.training.dateFinish|convertCacheDate:('d MMMM y'|localize)"></span></p>
    		</accordion-group>

		    <accordion-group is-open="true" heading="{{'Регистрация на обучение'|localize}}">
    			<form class="form" ng-submit="ordForm.submit()" style="margin: 0 0 10px 0;" >
					<stcperson
						person="ordForm.order.contact"
						companies="ordForm.companies"
						company-switch-off="false"
						web-site-off="true"
					/>
					<div>
						<div class="control-group">
					        <div class="controls">
					            <button type="submit" class="btn btn-success btn-small" ng-bind="'Создать'|localize"      ng-click="ordForm.formatData()" ng-disabled="ordForm.btnDisabled"></button>
					            <button type="button" class="btn btn-small"             ng-bind="'Очистить'|localize"     ng-click="ordForm.clear()"      ng-show="ordForm.btnClearShow"></button>
					        </div>
					    </div>
					</div>
				</form>
		    </accordion-group>
		</accordion>
	</div >
	<div class="span4">
	</div >
</div >
<stcalert data="ordForm.alert" span-right="4" span-middle="4" span-left="4"/>
<br>
]]></CSP>
</Export>
