<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="stc/partials/companies.csp" application="/csp/stc/" default="1"><![CDATA[
<div class="row-fluid" style="padding-bottom: 5px;">
	<div class="span10 offset1">
		<span ng-bind="'Организации'|localize" style="font-weight: bold;"></span>
		<div class="btn-group pull-right">
			<button type="button" class="btn btn-mini btnRadio" ng-model="company.status" btn-radio="'All'" ng-bind="'Все'|localize"></button>
			<button type="button" class="btn btn-mini btnRadio" ng-model="company.status" btn-radio="1"     ng-bind="'Университеты'|localize"></button>
		</div>
	</div>
</div>
<div class="row-fluid">
    <div class="span10 offset1">
	    <stcgrid
	    	grid="pageStore.companies.grid"
		    table-class="table table-bordered table-hover"
		    caption=""
		    columns="company.columns"
		    items="company.items"
		    properties="company.properties"
		    update-items="company.loadItems(pageCurr, pageSize, sqlName, isDown, searchSqlName, searchText)"

		    page-curr="company.pageCurr"
		    page-total="company.pageTotal"
		    page-size="company.pageSize"
		    navigator-visible="true"

		    selectable="true"
		    selected-items="company.selectedItems"
		    multi-select-mode="company.multiSelectMode"

		    action-column-visible="!menu.readOnlyMode"
		    action-column-icon="'icon-ellipsis-horizontal'"
		    action-column-title=""
		    action-column-method=""

		    first-row-action-icon="'icon-pencil'"
		    first-row-action-title="'Редактировать организацию'|localize"
		    first-row-action-method="company.edit(item)"
		    
		    second-row-action-icon="'icon-remove'"
		    second-row-action-title="'Удалить организацию'|localize"
		    second-row-action-method="company.remove(item)"
		    
		    forcibly-update="company.forciblyUpdate"
		/>
	</div>
</div>

<div class="row-fluid" ng-show="company.items.length==0 || company.selectedItems.length==0" style="text-align: center;">
	<i ng-bind="'Выберите организацию для отображения подробной информации.'|localize"></i>
</div>	

<div class="row-fluid" ng-hide="company.items.length==0 || company.selectedItems.length==0">
	<div class="span10 offset1">
		 <tabset>
			<tab heading="{{'Информация'|localize}}">
				<div class="row-fluid">
					<div class="span6">
						<p><span class="spnTitle" ng-bind="'Полное название организации'|localize"></span>: <span ng-bind="company.selectedItems[0].fullName"></span></p>
						<p><span class="spnTitle" ng-bind="'Юридический адрес'|localize"       ></span>: <span ng-bind="company.selectedItems[0].legalAddress"></span></p>
						<p><span class="spnTitle" ng-bind="'Почтовый адрес'|localize"          ></span>: <span ng-bind="company.selectedItems[0].mailAddress"></span></p>
						<p><span class="spnTitle" ng-bind="'Веб-сайт организации'|localize"       ></span>: <a target="_blank" style="text-decoration: none;" ng-href="{{'http://' + company.selectedItems[0].site}}" title="{{company.selectedItems[0].site}}"><i ng-bind="company.selectedItems[0].site.substring(0,25)"></i></a></p>
						</br>
						<p><span class="spnTitle" ng-bind="'Контакт'|localize"></span>: <span ng-bind="company.selectedItems[0].contact.lastName + ' ' + company.selectedItems[0].contact.firstName + ' ' + company.selectedItems[0].contact.middleName"></span></p>
						<p>
							<span><i class="icon-envelope" style="font-size: 0.9em;"></i> {{company.selectedItems[0].contact.email}}</span>
							<span ng-hide="company.selectedItems[0].contact.phone==''" style="padding-left:12px"><i class="icon-phone"></i> {{company.selectedItems[0].contact.phone}}</span>
							<span ng-hide="company.selectedItems[0].contact.skype==''" style="padding-left:12px"><i class="icon-skype"></i> {{company.selectedItems[0].contact.skype}}</span>
						</p>
					</div>
					<div class="span6">
						<p><span class="spnTitle" ng-bind="'КПП'|localize"  title="{{'Код причины постановки на учёт'|localize}}"                ></span>: <span ng-bind="company.selectedItems[0].kpp"></span></p>
						<p><span class="spnTitle" ng-bind="'ИНН'|localize"  title="{{'Идентификационный номер налогоплательщика'|localize}}"     ></span>: <span ng-bind="company.selectedItems[0].inn"></span></p>
						<p><span class="spnTitle" ng-bind="'ОГРН'|localize" title="{{'Основной государственный регистрационный номер'|localize}}"></span>: <span ng-bind="company.selectedItems[0].ogrn"></span></p>
						<p><span class="spnTitle" ng-bind="'Р/С'|localize"  title="{{'Расчётный счёт'|localize}}"                                ></span>: <span ng-bind="company.selectedItems[0].settlementAccount"></span></p>
						<p><span class="spnTitle" ng-bind="'К/С'|localize"  title="{{'Корреспондентский счёт'|localize}}"                        ></span>: <span ng-bind="company.selectedItems[0].correspondentAccount"></span></p>
						<p><span class="spnTitle" ng-bind="'БИК'|localize"  title="{{'Банковский идентификационный код'|localize}}"              ></span>: <span ng-bind="company.selectedItems[0].bic"></span></p>
						<p><span class="spnTitle" ng-bind="'Другая информация'|localize"></span>: <span ng-bind="company.selectedItems[0].otherInfo"></span></p>
					</div>
				</div>
			</tab>
		</tabset>
	</div>
</div>
</br>
<div class="row-fluid">
	<div class="span10 offset1">
		<stcalert data="company.alert"/>
	</div>
</div>]]></CSP>
</Export>
