<?xml version="1.0" encoding="UTF-8"?>
<Export generator="Cache" version="25">
<CSP name="stc/partials/createorder.csp" application="/csp/dorabotka/" default="1"><![CDATA[
<div class="row-fluid">
	<div class="span2">
	</div>
	<div class="span8">
	
	<div class="row-fluid">
	<div class="span2">
	</div>
	<div class="span8">

		<accordion close-others="true">
			<accordion-group id="gcalendar" heading="{{'Календарь ближайших курсов'|localize}}" is-open="ordForm.calendarOpen">
		    	<iframe id="ifcalendar"
		    		src='#($GET(^Settings("Stc", "GoogleCalendarSrc")))#'
		    		style="border: 0" 
		    		width="100%" 
		    		height="500px" 
		    		frameborder="0" 
		    		scrolling="auto">
		    	</iframe>
		    </accordion-group>
		    <accordion-group heading="{{'Форма регистрации'|localize}}" is-open="!ordForm.calendarOpen">
    			<form class="form" ng-submit="ordForm.submit()" style="margin: 0 0 10px 0;" >
					<stcperson
						person="ordForm.order.contact"
						companies="ordForm.companies"
						company-switch-off="false"
					/>
					<div>
						<div class="control-group">
					        <label class="control-label" ng-bind="'Партнер'|localize"></label>
					        <div class="controls">
					            <input class="span12" type="text" ng-model="ordForm.order.contact.partner"></input>
					        </div>
					    </div>
					    <div class="control-group">
					        <label class="control-label" ng-bind="('Место обучения'|localize) + '*'"></label>
					        <div class="controls">
					            <input class="span12" type="text" ng-model="ordForm.order.city" ng-change="ordForm.loadCities(ordForm.order.city)" placeholder="{{'Поиск города'|localize}}" typeahead="city as city.name + ', ' + city.parentName + ', ' + city.greatParentName for city in ordForm.cities | filter: {name: $viewValue} | limitTo: 15" required></input>
					        </div>
					    </div>
						<div class="control-group">
					    <label class="control-label" ng-bind="('Курс'|localize) + '*'"></label>
					        <div class="controls">
			                	<select class="span12" ng-model="ordForm.order.course.id" ng-options="course.id as course.name for course in ordForm.courses" required>
			                		<option value=""></option>
			                	</select>
					        </div>
					    </div>
					    <div class="control-group">
					        <label class="control-label" ng-bind="('Дата обучения'|localize) + '*'"></label>
					        <div class="controls">
					            <input type="text" class="span12" datepicker-popup="{{'d MMMM y'|localize}}" ng-model="ordForm.date" show-weeks="false" ng-required="true" />
					        </div>
					    </div>
						<div class="control-group">
					        <label class="control-label" ng-bind="('Количество слушателей'|localize) + '*'"></label>
					        <div class="controls">
					            <input class="span12" type="text" pattern="[0-9]{1,3}" ng-model="ordForm.order.studentsNumber" required></input>
					        </div>
					    </div>
					    <div class="control-group">
					        <div class="controls">
					            <button type="submit" class="btn btn-success btn-small" ng-bind="'Зарегистрироваться'|localize"      ng-click="ordForm.formatData()" ng-disabled="ordForm.btnDisabled"></button>
					            <button type="button" class="btn btn-primary btn-small" ng-bind="'Зарегистрироваться на другой курс'|localize" ng-click="ordForm.again()"      ng-show="ordForm.btnNewShow"></button>
					            <button type="button" class="btn btn-small"             ng-bind="'Очистить'|localize"     ng-click="ordForm.clear()"      ng-show="ordForm.btnClearShow"></button>
					        </div>
					    </div>
					</div>
				</form>
		    </accordion-group>
		</accordion>

	</div >
	<div class="span2">
	</div >
	</div >
	
	<stcalert data="ordForm.alert" span-right="2" span-middle="8" span-left="2"/>
	</div >
	<div class="span2">
	</div >
</div >

</br>
]]></CSP>
</Export>
